{
  "compilerOptions": {
    "outDir": "ts",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "incremental": false,
    "lib": ["ES2021", "DOM"],
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__",
    "src/**/__stories__"
  ]
}
