{
  "name": "@vtaits/form-schema",
  "version": "0.3.0-alpha.0",
  "description": "Serialization and parsing form values by schema",
  "main": "lib/index.js",
  "module": "es/index.js",
  "typings": "ts/index.d.ts",
  "files": [
    "/es",
    "/lib",
    "/ts"
  ],
  "keywords": [
    "form",
    "schama",
    "serialization",
    "parsing"
  ],
  "repository": "git@github.com:vtaits/form-schema.git",
  "author": "Vadim Taits <taizvadim@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf es lib ts",
    "build": "yarn build:cjs && yarn build:es && yarn build:ts",
    "build:cjs": "cross-env BABEL_ENV=cjs babel --root-mode upward --extensions '.ts,.tsx' src --out-dir lib --ignore \"src/**/__tests__\"",
    "build:es": "cross-env BABEL_ENV=es babel --root-mode upward --extensions '.ts,.tsx' src --out-dir es --ignore \"src/**/__tests__\"",
    "build:ts": "tsc --declaration",
    "test:ts": "tsc -p ./tsconfig.eslint.json",
    "lint": "eslint src --ext .ts,.tsx --ignore-path ../../.gitignore",
    "test:unit": "jest",
    "test": "yarn test:unit",
    "prepare": "yarn clean && yarn build"
  },
  "dependencies": {
    "@babel/runtime": "^7.17.2",
    "@types/is-promise": "^2.2.0",
    "is-promise": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@types/jest": "^27.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "4.3.5"
  }
}
