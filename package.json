{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "storybook dev -p 6006",
    "postinstall": "yarn build",
    "clean": "yarn workspaces foreach -pt run clean",
    "build": "yarn workspaces foreach -pt run build",
    "lint": "yarn workspaces foreach run lint",
    "lint:fix": "yarn workspaces foreach run lint:fix",
    "format": "yarn workspaces foreach run format",
    "test:unit": "yarn workspaces foreach run test:unit",
    "test:ts": "yarn workspaces foreach run test:ts",
    "test": "yarn lint && yarn test:ts && yarn test:unit",
    "validate": "yarn test && yarn build"
  },
  "repository": "git@github.com:vtaits/form-schema.git",
  "author": "Vadim Taits <taizvadim@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/blocks": "^7.5.3",
    "@storybook/builder-vite": "^7.5.3",
    "@storybook/manager-api": "^7.5.3",
    "@storybook/react": "^7.5.3",
    "@storybook/react-vite": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
    "@vitejs/plugin-react-swc": "^3.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "storybook": "^7.5.3",
    "typescript": "5.2.2",
    "vite": "^4.5.0"
  },
  "packageManager": "yarn@3.6.4"
}
